<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.anyi.common.company.mapper.PackageInfoMapper">

    <select id="getPackageInfoByPriceInterval" resultType="com.anyi.common.company.dto.PackageInfoDTO">
        select  * from package_info
        <where>
            and `status` = 1
            <if test="req.bizTypeId != null">
                and biz_type_id = #{req.bizTypeId}
            </if>
            <if test="req.companyId != null">
                and company_id = #{req.companyId}
            </if>
            <if test="req.price != null">
                and #{req.price} <![CDATA[>= ]]> price_low
                and #{req.price} <![CDATA[< ]]> price_high
            </if>
        </where>
    </select>
</mapper>