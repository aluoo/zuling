<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.anyi.sparrow.assist.system.dao.mapper.SysDictMapper">

  <select id="getByName" resultType="java.lang.String">
    SELECT `value` FROM sys_dict where name = #{name}
  </select>

  <select id="getByType" resultType="com.anyi.sparrow.common.vo.Dicts">
    SELECT * FROM sys_dict where type = #{type} order by sort
  </select>
</mapper>